<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <solid android:color="@color/off_white" />
            <stroke android:width="1sp" android:color="@color/header_color" />
        </shape>
     </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <solid android:color="@color/pressed_color" />
            <stroke android:width="1sp" android:color="@color/pressed_color" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_pressed="true">
       <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <solid android:color="@color/pressed_color" />
            <stroke android:width="1sp" android:color="@color/pressed_color" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_pressed="false">
       <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <solid android:color="@color/off_white" />
            <stroke android:width="1sp" android:color="@color/header_color" />
        </shape>
    </item>

</selector>