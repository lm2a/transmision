<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="true" android:state_selected="false" >
        <layer-list >
            <item android:top="47dp">
                <shape android:shape="line">
                    <stroke android:width="2dp" android:color="@color/greyBG"/>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
        </layer-list>
    </item>
    
    <item android:state_enabled="true" android:state_selected="true" >
        <layer-list >
            <item android:top="47dp">
                <shape android:shape="line">
                    <stroke android:width="2dp" android:color="@color/greyBG"/>
                </shape>
            </item>
            <item android:top="-3dp" android:bottom="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/fgAppBackgroundBlue"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>