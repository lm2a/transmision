<?xml version="1.0" encoding="utf-8"?>
<com.indra.elections.views.ZoomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/main_background0"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/telephonetv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/bigmargin"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="vertical"
            android:text="@string/menos"
            android:textColor="@color/greyTextDark"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/telephonetv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/bigmargin"
            android:background="@drawable/toast_frame"
            android:orientation="vertical"
            android:padding="5dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:layout_marginTop="4dip"
                android:background="@color/header_color"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/localBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="1dp"
                    android:background="@color/greyBG"
                    android:orientation="vertical"
                    android:paddingBottom="10dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:paddingTop="10dip" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal" >

                        <com.indra.elections.customcontrols.DeltaEditText
                            android:id="@+id/telephoneedit"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:cursorVisible="false"
                            android:inputType="none"
                            android:maxLength="9"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="30sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/telephone1"
                            android:layout_width="90dip"
                            android:layout_height="90dip"
                            android:layout_margin="5dip"
                            android:background="@drawable/button_selector"
                            android:text="@string/str1"
                            android:textColor="@drawable/buttontext_selector"
                            android:textSize="32sp" />

                        <Button
                            android:id="@+id/telephone2"
                            android:layout_width="90dip"
                            android:layout_height="90dip"
                            android:layout_margin="5dip"
                            android:background="@drawable/button_selector"
                            android:text="@string/str2"
                            android:textColor="@drawable/buttontext_selector"
                            android:textSize="32sp" />

                        <Button
                            android:id="@+id/telephone3"
                            android:layout_width="90dip"
                            android:layout_height="90dip"
                            android:layout_margin="5dip"
                            android:background="@drawable/button_selector"
                            android:text="@string/str3"
                            android:textColor="@drawable/buttontext_selector"
                            android:textSize="32sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/telephone4"
                            android:layout_width="90dip"
                            android:layout_height="90dip"
                            android:layout_margin="5dip"
                            android:background="@drawable/button_selector"
                            android:text="@string/str4"
                            android:textColor="@drawable/buttontext_selector"
                            android:textSize="32sp" />

                        <Button
                            android:id="@+id/telephone5"
                            android:layout_width="90dip"
                            android:layout_height="90dip"
                            android:layout_margin="5dip"
                            android:background="@drawable/button_selector"
                            android:text="@string/str5"
                            android:textColor="@drawable/buttontext_selector"
                            android:textSize="32sp" />

                        <Button
                            android:id="@+id/telephone6"
                            android:layout_width="90dip"
                            android:layout_height="90dip"
                            android:layout_margin="5dip"
                            android:background="@drawable/button_selector"
                            android:text="@string/str6"
                            android:textColor="@drawable/buttontext_selector"
                            android:textSize="32sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/telephone7"
                            android:layout_width="90dip"
                            android:layout_height="90dip"
                            android:layout_margin="5dip"
                            android:background="@drawable/button_selector"
                            android:text="@string/str7"
                            android:textColor="@drawable/buttontext_selector"
                            android:textSize="32sp" />

                        <Button
                            android:id="@+id/telephone8"
                            android:layout_width="90dip"
                            android:layout_height="90dip"
                            android:layout_margin="5dip"
                            android:background="@drawable/button_selector"
                            android:text="@string/str8"
                            android:textColor="@drawable/buttontext_selector"
                            android:textSize="32sp" />

                        <Button
                            android:id="@+id/telephone9"
                            android:layout_width="90dip"
                            android:layout_height="90dip"
                            android:layout_margin="5dip"
                            android:background="@drawable/button_selector"
                            android:text="@string/str9"
                            android:textColor="@drawable/buttontext_selector"
                            android:textSize="32sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:id="@+id/telephonell"
                            android:layout_width="90dip"
                            android:layout_height="90dip"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:layout_marginTop="5dip"
                            android:background="@drawable/button_selector"
                            android:src="@drawable/ic_action_call" />

                        <Button
                            android:id="@+id/telephone0"
                            android:layout_width="90dip"
                            android:layout_height="90dip"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:layout_marginTop="5dip"
                            android:background="@drawable/button_selector"
                            android:text="@string/str0"
                            android:textColor="@drawable/buttontext_selector"
                            android:textSize="32sp" />

                        <ImageButton
                            android:id="@+id/telephonede"
                            android:layout_width="90dip"
                            android:layout_height="90dip"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:layout_marginTop="5dip"
                            android:background="@drawable/button_selector"
                            android:src="@drawable/eraser_64"
                            android:textColor="@drawable/buttontext_selector" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/telephoneOptions"
            android:layout_width="fill_parent"
            android:layout_height="280dp"
            android:layout_alignParentBottom="true"
            android:background="#20000000"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_height"
                android:layout_alignParentTop="true"
                android:background="@color/header_color" />

            <RelativeLayout
                android:id="@+id/llamada4"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="30dip"
                android:background="@android:color/transparent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvllamada4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@android:color/transparent"
                    android:gravity="center_horizontal"
                    android:text="@string/manosLibres"
                    android:textSize="20sp" />

                <Switch
                    android:id="@+id/llamadaswitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvllamada4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:textOff="OFF"
                    android:textOn="ON" />
            </RelativeLayout>

            <View
                android:layout_width="280dp"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/llamada4"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:background="@color/header_color" />

            <RelativeLayout
                android:id="@+id/llamada5"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/llamada4"
                android:layout_margin="20dip"
                android:background="@android:color/transparent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/llamada6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@android:color/transparent"
                    android:gravity="center_horizontal"
                    android:text="@string/volumen"
                    android:textSize="20sp" />

                <SeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/llamada6"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:max="100" >
                </SeekBar>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llamadacontacto"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="15dip"
                android:background="@android:color/transparent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/contactimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.7"
                    android:background="@android:color/transparent"
                    android:src="@drawable/contact" />

                <TextView
                    android:id="@+id/llamada2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contactimg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dip"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="@string/llamadaproceso"
                    android:textColor="@color/errorRed"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/llamada3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llamada2"
                    android:layout_centerHorizontal="true"
                    android:alpha="1"
                    android:drawablePadding="10dip"
                    android:drawableRight="@android:drawable/sym_call_outgoing"
                    android:text="@string/colgar" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</com.indra.elections.views.ZoomLayout>