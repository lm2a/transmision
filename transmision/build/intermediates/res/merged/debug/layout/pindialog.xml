<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:layout_width="300dip"
        android:layout_height="350dip"
        android:layout_centerHorizontal="true"
        android:padding="10dip"
        android:background="@android:color/transparent" >

        <LinearLayout
            android:id="@+id/pinll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pincodigo1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="@string/codigo"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pincodigo2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/menos"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/pincodigollamada"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pinll"
            android:layout_marginTop="10dip"
            android:gravity="center_horizontal"
            android:text="@string/codigollamada"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pincodigollamada"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/insertePIN"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etxtpin"
                android:layout_width="160dip"
                android:layout_height="65dip"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="8" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>