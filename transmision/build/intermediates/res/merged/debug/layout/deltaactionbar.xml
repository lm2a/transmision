<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deltaactionbarwrapper"
    android:layout_width="fill_parent"
    android:layout_height="100dip"
    android:orientation="vertical" >

    <include
        android:id="@+id/deltaheadermain"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_alignParentTop="true"
        layout="@layout/delta_header" />

    <LinearLayout
        android:id="@+id/deltabar"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/deltaheadermain"
        android:layout_marginBottom="3dip"
        android:layout_marginTop="3dip"
        android:background="@drawable/llbackground"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/action_bar_title"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@android:drawable/ic_menu_preferences" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:paddingLeft="5dp"
            android:text="@string/otrasopciones"
            android:gravity="left|center_vertical"
            android:textColor="@color/greyText"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/separatorimg"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@id/deltaheadermain"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@id/deltabar"
        android:alpha="45"
        android:src="@color/greyText" />

    <TextView
        android:id="@+id/delta_Title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@id/deltaheadermain"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/separatorimg"
        android:gravity="center_vertical"
        android:text="@string/escrutinio"
        android:textColor="@color/greyText"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@id/deltaheadermain"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/barinitconexion"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/llbackground"
            android:paddingBottom="3dip"
            android:paddingTop="3dip"
            android:src="@android:drawable/ic_menu_info_details" />

        <ImageButton
            android:id="@+id/barinithelp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dip"
            android:background="@drawable/llbackground"
            android:paddingBottom="3dip"
            android:paddingTop="3dip"
            android:src="@android:drawable/ic_menu_help" />
    </LinearLayout>

</RelativeLayout>