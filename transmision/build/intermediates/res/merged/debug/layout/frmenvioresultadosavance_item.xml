<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/avance_itemlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".FrmEnvioResultados" >

    <ImageView
        android:id="@+id/imageViewLogoEleccion"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_alignParentLeft="true"
        android:background="#e9e9e4"
        android:contentDescription="@string/defaultContentDescription"
        android:scaleType="fitStart"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
		android:layout_marginRight="10dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        android:padding="2dip" >

        <TextView
            android:id="@+id/textViewAvance"
            android:layout_width="300dip"
            android:layout_height="40dip"
            android:background="@color/fgAppBackgroundBlue"
            android:gravity="center"
            android:text="@string/avance"
            android:textColor="@color/fgAppText"
            android:textSize="18sp" />

        <com.indra.elections.customcontrols.DeltaEditText
            android:id="@+id/deltaEditTextAvance"
            android:layout_width="97dp"
            android:layout_height="40dip"
            android:background="@drawable/background_deltaedittext"
            android:focusable="true"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="4"
            android:textColor="@color/fgAppText" />

    </LinearLayout>

    <View
        android:id="@+id/viewLineEleccion"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_height"
        android:layout_below="@id/imageViewLogoEleccion"
        android:background="@color/eleccion_color1_0501" />

</RelativeLayout>