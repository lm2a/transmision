<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_item_big"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <RelativeLayout
            android:id="@+id/item_rl2"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_item_big"
            android:background="@android:color/transparent"
            android:orientation="vertical" >

           <ImageView
                android:id="@+id/item_rl2_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/bigmargin"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:src="@drawable/urna_128" />
                        
            <com.indra.elections.customcontrols.CustomTextViewLoto
                android:id="@+id/headding"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@id/item_rl2_image"
                android:layout_marginLeft="@dimen/bigmargin"
                android:layout_marginRight="@dimen/bigmargin"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|left"
                android:textColor="@color/greyTextDark"
                android:textSize="25sp"/>
            
            <com.indra.elections.customcontrols.CustomTextViewLoto
                android:id="@+id/censo"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/bigmargin"
                android:layout_marginRight="@dimen/bigmargin"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|left"
                android:text="@string/ResulCenso"
                android:textColor="@color/greyTextDark"
                android:textSize="25sp"/>

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/bigmargin"
        android:layout_marginRight="@dimen/bigmargin"
        android:background="@color/line_color" />

</RelativeLayout>