<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res/com.indra.elections"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relhelp1"
    android:background="#55f0f0f0">
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="#00000000"
	    android:id="@+id/lihelp">
        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/circlePageIndicator"
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#99000900"
	        app1:centered="true"
	        app1:snap="false"
	        app:radius="6dp"
	        app:fillColor="@color/header_color_dark"
	        app:pageColor="#88888888"
            android:padding="20dip" />
	    <android.support.v4.view.ViewPager
	        android:layout_alignParentTop="true"
	        android:id="@+id/viewPager"
	        android:layout_width="fill_parent"
	        android:background="#00ffffff"
	        android:layout_height="match_parent"/>
	</RelativeLayout>
    <com.indra.elections.utils.keyboard.SAutoBgButton
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/btnLeft" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:background="@drawable/arrowleft"/>
	<com.indra.elections.utils.keyboard.SAutoBgButton
	    android:layout_centerVertical="true"
	    android:layout_alignParentRight="true"
	    android:id="@+id/btnRight" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:alpha="0.5"
	    android:background="@drawable/arrowright"/>
	<com.indra.elections.utils.keyboard.SAutoBgButton
	    android:alpha="0.6"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:id="@+id/btnClose" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:layout_marginBottom="10dp"
	    android:background="@drawable/cancel_184"
	    />
</RelativeLayout>	