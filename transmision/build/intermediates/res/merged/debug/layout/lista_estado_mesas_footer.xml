<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:id="@+id/footerListaEstadoMesas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent" >
        
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:background="@color/header_color_dark" />
        
        <TextView
            android:id="@+id/leyendaTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/tab_background_fase"
            android:text="@string/leyenda"
            android:textSize="15sp"
            android:textColor="@color/header_color_dark"
            android:gravity="center" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/leyendaTextView"
            android:background="@color/header_color_dark" />

        <LinearLayout
            android:id="@+id/leyendaLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/leyendaTextView"
            android:background="@android:color/transparent"
            android:gravity="center|left"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_marginLeft="45dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/estadoMesasSinDatos"
                    android:src="@drawable/ic_action_remove" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="@string/estadoMesasSinDatos"
                    android:textColor="@color/header_color_dark"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_marginRight="45dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/estadoMesasSinDatos"
                    android:src="@drawable/pending_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="@string/estadoMesasEnCola"
                    android:textColor="@color/header_color_dark"
                    android:textSize="16sp" />

            </LinearLayout>
            <!-- 
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="@string/estadoMesasNoAplica"
                    android:textColor="@color/header_color_dark"
                    android:textSize="16sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/estadoMesasNoAplica"
                    android:src="@android:drawable/ic_menu_help" />
            </LinearLayout>
            -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/leyendaLinearLayout2"
            android:layout_below="@+id/leyendaLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:baselineAligned="false"
            android:orientation="horizontal" >
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_marginLeft="45dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/estadoMesasEnviado"
                    android:src="@drawable/ic_action_accept" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="@string/estadoMesasEnviado"
                    android:textColor="@color/header_color_dark"
                    android:textSize="16sp" />

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_marginRight="45dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/estadoMesasEnviadaxtfno"
                    android:src="@android:drawable/ic_menu_call" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="@string/estadoMesasEnviadaxtfno"
                    android:textColor="@color/header_color_dark"
                    android:textSize="16sp" />

            </LinearLayout>
            
        </LinearLayout>
        
        <TextView
            android:id="@+id/textViewInfoColumna"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/leyendaLinearLayout2"
            android:layout_margin="10dp"
            android:textStyle="italic"
            android:background="@android:color/transparent"
            android:text="@string/estadoMesasInfoColumnaResaltada"
            android:textColor="@color/header_color_dark"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>