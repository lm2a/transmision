<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/deltaactionbarwrapper"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/header_color"
    android:orientation="horizontal" >
    
    <RelativeLayout
        android:id="@+id/actionBarMenuRelativeLayout"
        android:layout_width="110dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_ll_delta"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/actionBarMenuImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/defaultContentDescription"
            android:src="@drawable/menu_56" />

        <TextView
            android:id="@+id/actionBarMenuTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35.2dip"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:text="@string/header_menu"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/actionBarBackRelativeLayout"
        android:layout_width="70dp"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/actionBarMenuRelativeLayout"
        android:background="@drawable/button_ll_delta"
        android:clickable="true"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/actionBarBackImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/defaultContentDescription"
            android:src="@drawable/undo_56" />
    </RelativeLayout>

    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/header_title1"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/actionBarOptionsRelativeLayout"
        android:layout_width="64dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_ll_delta"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/actionBarOptionsImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_action_overflow" />

    </RelativeLayout>
    
    <View
        android:id="@+id/linea_maeactionbar"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_alignParentBottom="true"
        android:background="@color/header_color_dark" />

</RelativeLayout>