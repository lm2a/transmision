<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:background="@android:color/transparent" >

        <ImageView
            android:id="@+id/mesaImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/defaultContentDescription"
            android:gravity="center"
            android:src="@drawable/urna_128_concejo" >
        </ImageView>

        <TextView
            android:id="@+id/mesaTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/mesaImageView"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textoConcejo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingLeft="3dip"
        android:text="@string/concejo"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/numConcejo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item"
        android:layout_toRightOf="@id/textoConcejo"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="16sp" 
        android:layout_marginLeft="3dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/item_line"
        android:layout_width="wrap_content"
        android:layout_height="0.6dp"
        android:layout_below="@+id/item"
        android:background="@drawable/list_divider" />

</RelativeLayout>